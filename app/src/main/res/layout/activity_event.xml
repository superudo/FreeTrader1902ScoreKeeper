<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cust="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_color"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="de.woitek.freetrader1902scorekeeper.EventActivity">

    <de.woitek.libraries.styledradiogroup.StyledRadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        cust:display="Bandits;Bear;Police"
    />

    <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
        android:id="@+id/lblAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="YOUR TASK"
        android:textSize="@dimen/western_font_height"
        cust:fontFaceName="@string/western_font_name" />

    <de.woitek.libraries.styledradiogroup.StyledRadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        cust:display="Defense;Attack"
        />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="YOUR STATS"
                android:textSize="20dp"
                cust:fontFaceName="@string/western_font_name"/>

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="THEIR STATS"
                android:textSize="20dp"
                cust:fontFaceName="@string/western_font_name"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ARMOR: 3"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="MONTH BONUS: 3"
                android:textSize="14dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="DEFENSE"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="AGGRESSION"
                android:textSize="14dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <de.woitek.libraries.styledradiogroup.StyledRadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                cust:display="1;2;3"
            />

            <de.woitek.libraries.styledradiogroup.StyledRadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                cust:display="1;2;3"
            />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="DEFENSE"
                android:textSize="20dp"
                cust:fontFaceName="@string/western_font_name"/>

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ATTACK"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="5"
                android:textSize="@dimen/western_font_height"
                cust:fontFaceName="@string/western_font_name"/>

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="4"
                android:textSize="@dimen/western_font_height"
                cust:fontFaceName="@string/western_font_name"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
                android:id="@+id/textView12"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:text="YOU WON THE FIGHT"
                android:textSize="@dimen/western_font_height"
                cust:fontFaceName="@string/western_font_name"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
