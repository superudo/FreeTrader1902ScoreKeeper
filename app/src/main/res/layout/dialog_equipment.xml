<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cust="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin">

    <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
        android:id="@+id/tEquipmentTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="5dp"
        android:text="EQUIPMENT"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        cust:fontFaceName="@string/western_font_name"/>

    <de.woitek.libraries.flexiblefonttextview.FlexibleFontTextView
        android:id="@+id/lblAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="ACTION"
        android:textSize="20dp"
        cust:fontFaceName="@string/western_font_name"/>

    <de.woitek.libraries.styledradiogroup.StyledRadioGroup
        android:id="@+id/rbAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        cust:display="Buy;Sell;Drop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bnOk"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="110dp"
            android:text="Do it!"/>

        <Button
            android:id="@+id/bnCancel"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:minWidth="110dp"
            android:text="Forget it"/>

    </LinearLayout>

</LinearLayout>